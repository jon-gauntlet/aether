# OpenAI API Configuration
OPENAI_API_KEY=your-api-key-here

# Supabase Configuration
# Local Development
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_KEY=your-supabase-key-here

# Production
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-production-key-here

# Redis Configuration
# Local Development
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0
REDIS_SSL=false
REDIS_SELF_SIGNED=false

# Production/Staging (ElastiCache)
# REDIS_HOST=your-elasticache.cache.amazonaws.com
# REDIS_PORT=6379
# REDIS_SSL=true
# REDIS_SELF_SIGNED=true  # Set to true for self-signed certificates

# Model Configuration
DEFAULT_MODEL=gpt-4-turbo-preview  # or gpt-3.5-turbo for lower cost
EMBEDDING_MODEL=text-embedding-3-small
QUERY_EXPANSION_MODEL=t5-small  # or t5-base for better quality

# Performance Settings
BATCH_SIZE=32  # Adjust based on available memory
MAX_TOKENS=4096  # Maximum tokens per request
CACHE_TTL=3600  # Cache time-to-live in seconds (1 hour)

# Monitoring
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
ENABLE_PERFORMANCE_MONITORING=true  # Set to false to disable performance tracking

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880 # 5MB in bytes
VITE_ALLOWED_FILE_TYPES=image/*,application/pdf,.doc,.docx
VITE_UPLOAD_BUCKET=files

# Auth Configuration
VITE_AUTH_REDIRECT_URL=http://localhost:5173/auth/callback
VITE_SESSION_EXPIRY=3600 # 1 hour in seconds
VITE_REFRESH_INTERVAL=240 # 4 minutes in seconds

# API Configuration
VITE_API_URL=http://localhost:3000
VITE_API_TIMEOUT=30000 # 30 seconds in milliseconds 