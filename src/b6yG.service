[Unit]
Description=AI System Evolution LLM Service
After=context-service.service
PartOf=ai-evolution.slice

[Service]
Type=simple
WorkingDirectory=/home/jon/ai_system_evolution
ExecStart=/usr/bin/python3 services/llm_service.py
Nice=19
CPUQuota=20%
MemoryHigh=2G
IOWeight=10
Restart=on-failure
RestartSec=5
StartLimitBurst=3
StartLimitIntervalSec=60
Environment=CURSOR_CONFIG_DIR=/home/jon/.config/cursor
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=default.target 