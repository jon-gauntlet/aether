# Cursor Project Rules

editor.formatOnSave: true
editor.defaultFormatter: null
files.autoSave: afterDelay
files.autoSaveDelay: 1000

# Hidden Context Paths
context.paths:
  - .gauntlet/context/inner.md
  - GAUNTLET.md
  - VISION.md
