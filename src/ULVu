# Cursor Optimization and Management
# Secure passwordless access for Cursor operations

# Core optimization script - main entry point
jon ALL=(ALL) NOPASSWD: /home/jon/scripts/cursor/cursor-optimize optimize [0-9]*
jon ALL=(ALL) NOPASSWD: /home/jon/scripts/cursor/cursor-optimize verify [0-9]*
jon ALL=(ALL) NOPASSWD: /home/jon/scripts/cursor/cursor-optimize sysctl *
jon ALL=(ALL) NOPASSWD: /home/jon/scripts/cursor/cursor-optimize cpupower

# Direct command access for optimization
jon ALL=(ALL) NOPASSWD: /usr/bin/chrt -f -p [0-9]* [0-9]*
jon ALL=(ALL) NOPASSWD: /usr/bin/renice -n -[0-9]* -p [0-9]*
jon ALL=(ALL) NOPASSWD: /usr/bin/ionice -c 1 -n 0 -p [0-9]*
jon ALL=(ALL) NOPASSWD: /usr/bin/taskset -pc 0-7 [0-9]*
jon ALL=(ALL) NOPASSWD: /usr/bin/cpupower frequency-set -g performance
jon ALL=(ALL) NOPASSWD: /usr/sbin/sysctl -w vm.swappiness=*
jon ALL=(ALL) NOPASSWD: /usr/sbin/sysctl -w kernel.sched_*
jon ALL=(ALL) NOPASSWD: /usr/sbin/sysctl -w *

# Process management
jon ALL=(ALL) NOPASSWD: /usr/bin/systemctl daemon-reload
jon ALL=(ALL) NOPASSWD: /usr/bin/systemctl restart cursor-*
jon ALL=(ALL) NOPASSWD: /usr/bin/systemctl start cursor-*
jon ALL=(ALL) NOPASSWD: /usr/bin/systemctl stop cursor-*
jon ALL=(ALL) NOPASSWD: /usr/bin/systemctl enable cursor-*
jon ALL=(ALL) NOPASSWD: /usr/bin/systemctl disable cursor-*
jon ALL=(ALL) NOPASSWD: /usr/bin/systemctl status cursor-*

# Memory and scheduler management
jon ALL=(ALL) NOPASSWD: /usr/bin/tee /proc/sys/vm/drop_caches
jon ALL=(ALL) NOPASSWD: /usr/bin/tee /proc/sys/vm/compact_memory
jon ALL=(ALL) NOPASSWD: /usr/bin/tee /proc/sys/kernel/sched_*
jon ALL=(ALL) NOPASSWD: /usr/bin/tee /proc/sys/*

# Installation and updates
jon ALL=(ALL) NOPASSWD: /usr/bin/cp /home/jon/scripts/cursor/cursor-* /etc/systemd/system/
jon ALL=(ALL) NOPASSWD: /usr/bin/cp /home/jon/scripts/cursor/cursor-* /usr/local/bin/
jon ALL=(ALL) NOPASSWD: /usr/bin/ln -sf /home/jon/scripts/cursor/cursor-* /usr/local/bin/
jon ALL=(ALL) NOPASSWD: /usr/bin/chmod +x /home/jon/scripts/cursor/cursor-*
jon ALL=(ALL) NOPASSWD: /usr/bin/chown jon\:jon /home/jon/.local/share/cursor*

# Monitoring and verification
jon ALL=(ALL) NOPASSWD: /usr/bin/cat /proc/sys/vm/swappiness
jon ALL=(ALL) NOPASSWD: /usr/bin/cat /proc/sys/kernel/sched_*
jon ALL=(ALL) NOPASSWD: /usr/bin/cat /proc/sys/* 