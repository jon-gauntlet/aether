{
    "explorer.excludeGitIgnore": true,
    "files.exclude": {
        // Hide all dotfiles in home directory
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/.bash*": true,
        "**/.zsh*": true,
        "**/.profile": true,
        "**/.local/**": true,
        "**/.config/**": true,
        "**/.cache/**": true,
        "**/.npm/**": true,
        "**/.yarn*": true,
        "**/.nvm/**": true,
        "**/.ssh/**": true,
        "**/.gnupg/**": true,
        "**/.mozilla/**": true,
        "**/.vscode/**": true,
        "**/.cursor/**": true,
        "**/node_modules/**": true,
        // Specific home directory files
        "/home/jon/.bash*": true,
        "/home/jon/.zsh*": true,
        "/home/jon/.profile": true,
        "/home/jon/.mkshrc": true,
        "/home/jon/.screenrc": true,
        "/home/jon/.eos*": true,
        "/home/jon/.yarnrc": true,
        "/home/jon/.wget-hsts": true,
        "/home/jon/.zcompdump*": true,
        "/home/jon/.oh-my-zsh": true,
        "/home/jon/.pyenv": true,
        "/home/jon/.bundle": true,
        "/home/jon/.librewolf": true,
        "/home/jon/.zoom": true,
        "/home/jon/.ollama": true,
        "/home/jon/.cursor": true,
        "/home/jon/.config": true,
        "/home/jon/.local": true,
        "/home/jon/.cache": true,
        "/home/jon/.pki": true,
        "/home/jon/.gnupg": true,
        "/home/jon/.ssh": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.hg/store/**": true,
        "**/.cache/**": true,
        "**/.local/**": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.cache/**": true,
        "**/.local/**": true
    },
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "explorer.autoReveal": true,
    "explorer.confirmDelete": true,
    "explorer.confirmDragAndDrop": false,
    "explorer.compactFolders": false,
    "explorer.incrementalNaming": "smart",
    "explorer.sortOrder": "type"
} 