{
  "editor": {
    "formatOnSave": true,
    "defaultFormatter": null
  },
  "context": {
    "paths": [
      "~/.hidden_context/**/*"
    ],
    "hidden": [
      "~/.hidden_context/**/*"
    ],
    "maxTokens": 100000,
    "preserveAll": true,
    "autoLoad": true
  },
  "ai": {
    "maintain_hidden_awareness": true,
    "public_only_output": true
  },
  "search": {
    "include": [
      "~/.hidden_context/**/*"
    ]
  }
} 