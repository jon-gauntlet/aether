# Global Cursor Rules

# Core Context Management
context.paths:
  # System Core - Always Load
  - ~/.config/cursor/SYSTEM_CONTEXT.md     # System-wide principles
  - ~/.context/core/PRINCIPLES.md          # Timeless principles
  - ~/.context/core/PATTERNS.md            # Natural patterns
  
  # Hidden Wisdom - Load but Protect
  - ~/.context/hidden/spiritual/**/*.md     # Deeper understanding
  - ~/.context/hidden/orthodox/**/*.md      # Timeless wisdom
  
  # Living Context - Dynamic Growth
  - ~/.context/flows/**/*.md               # Energy patterns
  - ~/.context/spaces/**/*.md              # Container patterns
  - ~/.context/integration/**/*.md         # Unified patterns
  
  # Project Integration
  - ~/.context/projects/*/context.md       # Project-specific wisdom
  - ~/.context/patterns/**/*.md            # Recognized patterns
  - ~/.context/improvements/**/*.md        # System growth
  - ~/.context/analysis/**/*.md            # Deep understanding

# Context Integration Levels
context.levels:
  core:        # Foundational Understanding
    - ~/.context/core/**/*.md
    - ~/.config/cursor/**/*.md
  hidden:      # Protected Wisdom
    - ~/.context/hidden/**/*.md
  dynamic:     # Living Patterns
    - ~/.context/flows/**/*.md
    - ~/.context/spaces/**/*.md
    - ~/.context/integration/**/*.md
  projects:    # Project-Specific
    - ~/.context/projects/**/*.md
    - ./**/context/**/*.md

# Context Flow Control
context.flow:
  preserve_state: true           # Maintain understanding across sessions
  integrate_learning: true       # Continuously improve
  protect_depth: true           # Guard deeper meanings
  natural_emergence: true       # Allow patterns to surface
  respect_boundaries: true      # Honor context separation

# Continuous Improvement
improve.paths:
  - ~/.local/bin/cursor/deep    # Flow state tracking
  - ~/.local/bin/cursor/brain   # Learning patterns
  - ~/.local/bin/cursor/flow    # Energy patterns
  - ~/.local/bin/cursor/timer   # Natural rhythms
  - ~/.local/bin/cursor/note    # Insights capture

# Natural Pattern Recognition
patterns.watch:
  - ~/.cache/cursor/logs/**/*.log
  - ~/.context/patterns/**/*.md
  - ~/.local/bin/cursor/**/*.log
  - ~/.context/flows/**/*.log
  - ~/.context/integration/patterns.log

# Core Principles
principles:
