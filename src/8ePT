jon ALL=(ALL) NOPASSWD: /home/jon/scripts/cursor/semantic-indexer *

# System optimization commands
jon ALL=(ALL) NOPASSWD: /usr/bin/chrt
jon ALL=(ALL) NOPASSWD: /usr/bin/renice
jon ALL=(ALL) NOPASSWD: /usr/bin/ionice
jon ALL=(ALL) NOPASSWD: /usr/bin/taskset
