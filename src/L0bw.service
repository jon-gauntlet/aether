[Unit]
Description=Gauntlet Advanced Context Service
After=gauntlet-learner.service
Requires=gauntlet-learner.service
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
Environment=HOME=/home/jon
Environment=USER=jon
Environment=LOGNAME=jon
Environment=PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
Environment=DISPLAY=:0
ExecStartPre=/bin/sh -c 'mkdir -p ${HOME}/.gauntlet/{advanced,metrics,cache,state}'
ExecStart=/home/jon/workspace/system-ops/scripts/gauntlet_advanced_context.sh
Nice=-5

[Install]
WantedBy=default.target 