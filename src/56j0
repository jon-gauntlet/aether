#!/bin/bash

# Quick Note Capture
NOTES_DIR="$HOME/.hidden_context/personal/notes"
mkdir -p "$NOTES_DIR"

# Generate timestamp and filename
timestamp=$(date +"%Y%m%d_%H%M%S")
filename="$NOTES_DIR/note_${timestamp}.md"

# If argument provided, use it as note content
if [ "$1" ]; then
    echo "# Note ($timestamp)" > "$filename"
    echo "" >> "$filename"
    echo "$@" >> "$filename"
    notify-send "Note Captured" "$@"
else
    # Open editor for note
    $EDITOR "$filename"
fi

# Update context
touch "$NOTES_DIR"/* 2>/dev/null

# Optional: Add to context index
echo "$(date +%s) note_created $filename" >> "$HOME/.cache/cursor/context/notes.log" 