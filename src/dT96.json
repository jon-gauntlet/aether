{
    "services": {
        "context-crystallizer": {
            "type": "core",
            "priority": 1,
            "dependencies": [],
            "health_check": {
                "type": "http",
                "endpoint": "http://localhost:8080/health",
                "interval": 30,
                "timeout": 5
            },
            "resources": {
                "cpu_limit": "20%",
                "memory_limit": "2G",
                "io_weight": 100
            }
        },
        "essence-integrator": {
            "type": "core",
            "priority": 2,
            "dependencies": ["context-crystallizer"],
            "health_check": {
                "type": "http",
                "endpoint": "http://localhost:8081/health",
                "interval": 30,
                "timeout": 5
            },
            "resources": {
                "cpu_limit": "30%",
                "memory_limit": "3G",
                "io_weight": 200
            }
        },
        "autonomic-manager": {
            "type": "system",
            "priority": 0,
            "dependencies": ["context-crystallizer", "essence-integrator"],
            "health_check": {
                "type": "http",
                "endpoint": "http://localhost:8082/health",
                "interval": 30,
                "timeout": 5
            },
            "resources": {
                "cpu_limit": "10%",
                "memory_limit": "1G",
                "io_weight": 50
            }
        }
    },
    "tools": {
        "cursor": {
            "type": "ide",
            "integration_points": [
                {
                    "type": "extension",
                    "name": "ai-assistant",
                    "enabled": true,
                    "config": {
                        "context_depth": 10,
                        "pattern_matching": true,
                        "suggestion_threshold": 0.8
                    }
                },
                {
                    "type": "service",
                    "name": "code-analyzer",
                    "enabled": true,
                    "config": {
                        "analysis_depth": "deep",
                        "pattern_learning": true,
                        "optimization_level": 2
                    }
                }
            ],
            "resources": {
                "priority": "high",
                "context_retention": "infinite",
                "pattern_learning": true
            }
        },
        "brave": {
            "type": "browser",
            "integration_points": [
                {
                    "type": "extension",
                    "name": "context-capture",
                    "enabled": true,
                    "config": {
                        "capture_threshold": 0.7,
                        "privacy_level": "high",
                        "storage_limit": "1GB"
                    }
                }
            ],
            "resources": {
                "priority": "medium",
                "context_retention": "30d",
                "pattern_learning": true
            }
        }
    },
    "patterns": {
        "learning": {
            "enabled": true,
            "confidence_threshold": 0.75,
            "merge_threshold": 0.85,
            "retention_period": "90d",
            "max_patterns": 10000
        },
        "types": {
            "code": {
                "enabled": true,
                "priority": "high",
                "min_confidence": 0.8
            },
            "resource": {
                "enabled": true,
                "priority": "medium",
                "min_confidence": 0.7
            },
            "interaction": {
                "enabled": true,
                "priority": "low",
                "min_confidence": 0.6
            }
        }
    },
    "context": {
        "storage": {
            "type": "hierarchical",
            "max_depth": 10,
            "retention": {
                "active": "30d",
                "archive": "365d"
            }
        },
        "synthesis": {
            "enabled": true,
            "interval": "1h",
            "depth": "deep",
            "confidence_threshold": 0.8
        },
        "privacy": {
            "enabled": true,
            "encryption": "aes-256-gcm",
            "sanitization": true,
            "retention": "90d"
        }
    },
    "security": {
        "encryption": {
            "algorithm": "aes-256-gcm",
            "key_rotation": "30d",
            "backup_encryption": true
        },
        "access_control": {
            "enabled": true,
            "default_policy": "deny",
            "authentication": "required"
        },
        "audit": {
            "enabled": true,
            "retention": "365d",
            "detail_level": "high"
        }
    },
    "monitoring": {
        "metrics": {
            "collection_interval": 60,
            "retention_period": "30d",
            "aggregation_interval": "5m"
        },
        "alerting": {
            "enabled": true,
            "channels": ["log", "file"],
            "min_severity": "warning"
        },
        "health_checks": {
            "enabled": true,
            "interval": 30,
            "timeout": 5
        }
    },
    "backup": {
        "enabled": true,
        "schedule": "0 2 * * *",
        "retention": {
            "hourly": 24,
            "daily": 7,
            "weekly": 4,
            "monthly": 3
        },
        "encryption": true,
        "compression": true
    },
    "evolution": {
        "enabled": true,
        "strategy": "conservative",
        "validation": {
            "required": true,
            "timeout": 300
        },
        "rollback": {
            "enabled": true,
            "attempts": 3,
            "timeout": 600
        }
    }
} 