source $ZSH/oh-my-zsh.sh

# Gem Alias
gem() {
  if [[ "$1" == "install" || "$1" == "uninstall" || "$1" == "remove" ]]; then
    echo "Error: Use bundle add/remove instead of gem install/uninstall/remove."
    echo "To install gems, modify the Gemfile and run bundle install."
  else
    command gem "$@"
  fi
}

# Gauntlet AI Environment Setup
export GAUNTLET_START="2024-01-06"
export WORK_HOURS=100
export POMODORO_LENGTH=25

# Directory Purposes
# ~/Documents - Learning resources and documentation
# ~/workspace - Active project work
# ~/scripts - Automation and productivity scripts
# ~/Music - Focus-enhancing playlists
# ~/Pictures - Progress tracking and motivation
# ~/Videos - Course content and tutorials

# Aliases for rapid task switching
alias gwork="cd ~/workspace"
alias gdocs="cd ~/Documents"
alias gnotes="cd ~/Documents/notes"
alias gscripts="cd ~/scripts"

# Quick commands
alias pomodoro="timer ${POMODORO_LENGTH}m"
alias daily="cp ~/Documents/templates/daily.md ~/Documents/notes/$(date +%Y-%m-%d).md"
alias focus="spotify-player playlist focus"
alias break="timer 5m && notify-send 'Break Over!'"

# Git shortcuts for rapid commits
alias gs="git status"
alias gc="git commit -m"
alias gp="git push"
alias gl="git log --oneline -n 5"

# Python environment
export PYTHONPATH="$HOME/workspace:$PYTHONPATH"
alias py="python3"
alias jl="jupyter lab"

# Prevent distractions
