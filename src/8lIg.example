{
  "system": {
    "name": "ai_system_evolution",
    "version": "1.0.0",
    "description": "AI System Evolution Autonomic Manager",
    "base_path": "/path/to/ai_system_evolution",
    "data_path": "/path/to/ai_system_evolution/data",
    "log_level": "INFO"
  },
  "monitor": {
    "metrics": {
      "collection_interval": 60,
      "retention_period": 604800,
      "batch_size": 100
    },
    "system_metrics": {
      "cpu": true,
      "memory": true,
      "disk": true,
      "network": true
    },
    "process_metrics": {
      "enabled": true,
      "include_children": true
    },
    "container_metrics": {
      "enabled": true,
      "stats_interval": 60
    }
  },
  "analyzer": {
    "anomaly_detection": {
      "enabled": true,
      "min_data_points": 30,
      "confidence_threshold": 0.8,
      "thresholds": {
        "cpu_percent": {
          "warning": 70,
          "critical": 90
        },
        "memory_percent": {
          "warning": 80,
          "critical": 95
        },
        "context_growth_rate": {
          "warning": 100,
          "critical": 200
        },
        "pattern_growth_rate": {
          "warning": 50,
          "critical": 100
        }
      }
    },
    "pattern_detection": {
      "enabled": true,
      "min_pattern_length": 3,
      "max_gap": 300,
      "confidence_threshold": 0.7
    }
  },
  "planner": {
    "action_planning": {
      "enabled": true,
      "max_concurrent_actions": 5,
      "priority_levels": 5,
      "min_confidence": 0.5
    },
    "resource_planning": {
      "enabled": true,
      "scale_up_threshold": 0.8,
      "scale_down_threshold": 0.3,
      "min_scale_interval": 300
    }
  },
  "executor": {
    "action_execution": {
      "enabled": true,
      "max_retries": 3,
      "retry_delay": 60,
      "timeout": 300
    },
    "resource_management": {
      "enabled": true,
      "min_cpu_cores": 1,
      "max_cpu_cores": 8,
      "min_memory_mb": 1024,
      "max_memory_mb": 8192
    }
  },
  "knowledge": {
    "storage": {
      "type": "sqlite",
      "path": "data/knowledge.db",
      "backup_interval": 86400,
      "max_backups": 7
    },
    "maintenance": {
      "cleanup_interval": 86400,
      "max_age": 2592000,
      "min_confidence": 0.5
    }
  },
  "security": {
    "container": {
      "privileged": false,
      "cap_add": [
        "SYS_PTRACE"
      ],
      "security_opt": [
        "no-new-privileges:true"
      ]
    },
    "file_permissions": {
      "config_mode": "0640",
      "data_mode": "0640",
      "log_mode": "0640"
    }
  },
  "logging": {
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "standard": {
        "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
      }
    },
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "level": "INFO",
        "formatter": "standard",
        "stream": "ext://sys.stdout"
      },
      "file": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "INFO",
        "formatter": "standard",
        "filename": "data/logs/autonomic.log",
        "maxBytes": 10485760,
        "backupCount": 5
      },
      "journal": {
        "class": "systemd.journal.JournalHandler",
        "level": "INFO",
        "formatter": "standard"
      }
    },
    "loggers": {
      "": {
        "handlers": ["console", "file", "journal"],
        "level": "INFO",
        "propagate": true
      }
    }
  }
} 