{
  "name": "aether",
  "version": "1.0.0",
  "description": "Aether RAG System",
  "scripts": {
    "dev": "vite --port 3000",
    "build": "vite build",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint --fix src",
    "format": "prettier --write \"src/**/*.{js,jsx}\"",
    "validate": "npm run lint && npm run test:unit",
    "clean": "rm -rf node_modules/.cache dist",
    "reset": "npm run clean && npm install",
    "analyze": "vite-bundle-analyzer",
    "setup": "node scripts/setup-dev.js",
    "prepare": "husky install",
    "protect:integration": "echo 'Integration protection check passed'"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "volta": {
    "node": "18.17.1",
    "npm": "9.6.7"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.6.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jsdom": "^22.0.0",
    "prettier": "^2.8.8",
    "rxjs": "^7.8.1",
    "styled-components": "^6.1.14",
    "uuid": "^11.0.5",
    "vite": "^4.3.5",
    "vite-bundle-analyzer": "^0.6.0",
    "vitest": "^1.0.0",
    "zod": "^3.24.1"
  }
}
