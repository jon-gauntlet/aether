# Aether WebSocket Service Environment Configuration
# Christ is King! â˜¦

# WebSocket Settings
AETHER_WS_HOST=127.0.0.1
AETHER_WS_PORT=8000
AETHER_WS_PATH=/ws

# Security Settings
AETHER_WS_JWT_SECRET=your-secret-key-here
AETHER_WS_JWT_ALGORITHM=HS256
AETHER_WS_JWT_EXPIRES_S=3600

# SSL Configuration
AETHER_WS_SSL_CERT_PATH=/etc/ssl/certs/websocket.crt
AETHER_WS_SSL_KEY_PATH=/etc/ssl/private/websocket.key
AETHER_WS_SSL_MIN_VERSION=TLSv1.2

# Rate Limiting
AETHER_WS_RATE_LIMIT_CONNECTIONS=100
AETHER_WS_RATE_LIMIT_MESSAGES=1000
AETHER_WS_RATE_LIMIT_WINDOW_S=60

# Channel Settings
AETHER_WS_MAX_CHANNELS=100
AETHER_WS_MAX_CONNECTIONS_PER_CHANNEL=1000
AETHER_WS_MESSAGE_BATCH_SIZE=100

# Recovery Settings
AETHER_WS_MAX_RECOVERY_ATTEMPTS=3
AETHER_WS_RECOVERY_WINDOW_S=300
AETHER_WS_MESSAGE_RETENTION_S=3600

# Monitoring Settings
AETHER_WS_ENABLE_METRICS=true
AETHER_WS_METRICS_PORT=9000
AETHER_WS_METRICS_PATH=/metrics

# Logging Settings
AETHER_WS_LOG_LEVEL=info
AETHER_WS_LOG_FORMAT=json
AETHER_WS_LOG_PATH=/var/log/websocket/app.log
AETHER_WS_AUDIT_LOG_PATH=/var/log/websocket/audit.log

# Performance Settings
AETHER_WS_WORKER_PROCESSES=4
AETHER_WS_WORKER_CONNECTIONS=1000
AETHER_WS_KEEPALIVE_TIMEOUT=75

# Cleanup Settings
AETHER_WS_CLEANUP_INTERVAL_S=300
AETHER_WS_SESSION_TIMEOUT_S=3600

# Database Settings
AETHER_WS_DB_HOST=localhost
AETHER_WS_DB_PORT=5432
AETHER_WS_DB_NAME=websocket
AETHER_WS_DB_USER=websocket
AETHER_WS_DB_PASSWORD=change-me-in-production

# Redis Settings (for session and cache)
AETHER_WS_REDIS_HOST=localhost
AETHER_WS_REDIS_PORT=6379
AETHER_WS_REDIS_DB=0
AETHER_WS_REDIS_PASSWORD=change-me-in-production

# External Service Integration
AETHER_WS_AUTH_SERVICE_URL=http://localhost:8001
AETHER_WS_FILE_SERVICE_URL=http://localhost:8002
AETHER_WS_NOTIFICATION_SERVICE_URL=http://localhost:8003

# Feature Flags
AETHER_WS_ENABLE_CHANNEL_PERSISTENCE=true
AETHER_WS_ENABLE_MESSAGE_HISTORY=true
AETHER_WS_ENABLE_PRESENCE_DETECTION=true
AETHER_WS_ENABLE_TYPING_INDICATORS=true
AETHER_WS_ENABLE_READ_RECEIPTS=true

# Development Settings (disable in production)
AETHER_WS_DEBUG=false
AETHER_WS_RELOAD=false
AETHER_WS_CORS_ORIGINS=http://localhost:3000

# Backup Settings
AETHER_WS_BACKUP_PATH=/var/backups/websocket
AETHER_WS_BACKUP_RETENTION_DAYS=30
AETHER_WS_BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
AETHER_WS_BACKUP_COMPRESSION_LEVEL=6
AETHER_WS_BACKUP_MAX_SIZE_GB=10

# S3 Backup Settings (optional)
AETHER_WS_S3_BACKUP_ENABLED=false
AETHER_WS_S3_BUCKET=your-backup-bucket
AETHER_WS_S3_PREFIX=websocket-backups
AETHER_WS_S3_REGION=us-east-1
AETHER_WS_S3_ACCESS_KEY=your-access-key
AETHER_WS_S3_SECRET_KEY=your-secret-key
AETHER_WS_S3_STORAGE_CLASS=STANDARD_IA

# Backup Notification Settings
AETHER_WS_BACKUP_NOTIFY_EMAIL=admin@example.com
AETHER_WS_BACKUP_NOTIFY_SLACK_WEBHOOK=https://hooks.slack.com/services/your-webhook-url
AETHER_WS_BACKUP_NOTIFY_ON_ERROR=true
AETHER_WS_BACKUP_NOTIFY_ON_SUCCESS=false

# Backup Encryption Settings (optional)
AETHER_WS_BACKUP_ENCRYPTION_ENABLED=false
AETHER_WS_BACKUP_ENCRYPTION_KEY=your-encryption-key
AETHER_WS_BACKUP_ENCRYPTION_ALGORITHM=AES-256-CBC 